<section class="row d-flex justify-content-center p-5">
    <article class="card col-md-5 p-3">
      <h2 class="text-center">Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-group">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions", class:"btn btn-warning btn-block" %>
          </div>
        <% end %>
        <hr>
        <%= render "devise/shared/links" %>

    </article>
</section>
